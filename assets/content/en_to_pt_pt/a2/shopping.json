{
  "id": "shopping_01",
  "title": "Shopping Basics",
  "description": "Learn essential shopping vocabulary in European Portuguese",
  "level": "A2",
  "language_pair": {
    "source": "en_US",
    "target": "pt_PT"
  },
  "xp_reward": 15,
  "order": 3,
  "icon": "shopping_cart",
  "questions": [
    {
      "type": "multiple_choice",
      "prompt": "How do you say 'How much does it cost?' in Portuguese?",
      "options": ["Quanto custa?", "O que é?", "Onde está?", "Como está?"],
      "correct_index": 0,
      "explanation": "'Quanto custa?' is the standard way to ask for the price."
    },
    {
      "type": "typing",
      "prompt": "Write 'I would like' in Portuguese (formal)",
      "correct_answers": ["Queria", "Eu queria", "Gostaria"],
      "hint": "Conditional form of 'querer'",
      "accent_strict": false
    },
    {
      "type": "matching_pairs",
      "prompt": "Match the shopping phrases",
      "pairs": [
        ["How much?", "Quanto?"],
        ["Too expensive", "Muito caro"],
        ["Cheap", "Barato"],
        ["The bill", "A conta"]
      ]
    },
    {
      "type": "multiple_choice",
      "prompt": "What does 'Posso pagar com cartão?' mean?",
      "options": ["Can I pay cash?", "Can I pay by card?", "Do you have change?", "Is it on sale?"],
      "correct_index": 1,
      "explanation": "'Cartão' means card. 'Dinheiro' would be cash."
    },
    {
      "type": "sentence_builder",
      "prompt": "Build: 'I want to buy this'",
      "words": ["Quero", "comprar", "isto", "vender", "aquilo"],
      "correct_order": [0, 1, 2],
      "distractors": ["vender", "aquilo"]
    },
    {
      "type": "typing",
      "prompt": "Write 'Do you have...?' in Portuguese",
      "correct_answers": ["Tem?", "Tem...?", "Têm?"],
      "hint": "Third person of 'ter'",
      "accent_strict": false
    },
    {
      "type": "multiple_choice",
      "prompt": "How do you ask for a bigger size?",
      "options": ["Tem mais pequeno?", "Tem maior?", "Tem outro cor?", "Tem mais barato?"],
      "correct_index": 1,
      "explanation": "'Maior' means bigger. 'Mais pequeno' would be smaller."
    },
    {
      "type": "matching_pairs",
      "prompt": "Match the shop types",
      "pairs": [
        ["Bakery", "Padaria"],
        ["Pharmacy", "Farmácia"],
        ["Supermarket", "Supermercado"],
        ["Bookshop", "Livraria"]
      ]
    }
  ],
  "cheat_sheet": {
    "title": "Shopping in Portuguese",
    "sections": [
      {
        "heading": "Essential Phrases",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["How much does it cost?", "Quanto custa?"],
              ["I would like...", "Queria... / Gostaria de..."],
              ["Do you have...?", "Tem...?"],
              ["I'm just looking", "Estou só a ver"],
              ["I'll take it", "Levo este/esta"],
              ["Can I pay by card?", "Posso pagar com cartão?"],
              ["Cash", "Dinheiro"],
              ["Receipt", "Recibo / Fatura"]
            ]
          }
        ]
      },
      {
        "heading": "Describing Items",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Expensive", "Caro"],
              ["Cheap", "Barato"],
              ["Big/Bigger", "Grande / Maior"],
              ["Small/Smaller", "Pequeno / Mais pequeno"],
              ["This one", "Este/Esta"],
              ["That one", "Esse/Essa / Aquele/Aquela"]
            ]
          }
        ]
      },
      {
        "heading": "Types of Shops",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Shop/Store", "Loja"],
              ["Supermarket", "Supermercado"],
              ["Market", "Mercado"],
              ["Bakery", "Padaria"],
              ["Butcher", "Talho"],
              ["Pharmacy", "Farmácia"],
              ["Bookshop", "Livraria"]
            ]
          }
        ]
      },
      {
        "heading": "Tips",
        "content": [
          {
            "type": "tip",
            "text": "Use 'Queria' (conditional) instead of 'Quero' (present) for politeness when asking for things."
          },
          {
            "type": "warning",
            "text": "In Portugal, many small shops close for lunch (1-3 PM) and on Sunday."
          }
        ]
      }
    ]
  }
}
