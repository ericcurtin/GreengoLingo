  "questions": [
    {
      "type": "multiple_choice",
      "prompt": "How do you say 'I would like to book a room' in Portuguese?",
      "options": ["Queria reservar um quarto", "Quero um bilhete", "Onde é o hotel?", "Quanto custa?"],
      "correct_index": 0,
      "explanation": "'Queria reservar' is polite way to say 'I would like to book'."
    },
    {
      "type": "matching_pairs",
      "prompt": "Match travel words",
      "pairs": [
        ["passport", "passaporte"],
        ["suitcase", "mala"],
        ["hotel", "hotel"],
        ["flight", "voo"]
      ]
    },
    {
      "type": "typing",
      "prompt": "Write 'Do you have a reservation?' in Portuguese",
      "correct_answers": ["Tem uma reserva?", "Tem reserva?"],
      "hint": "Tem + reserva",
      "accent_strict": false
    },
    {
      "type": "multiple_choice",
      "prompt": "What does 'Quero fazer check-out' mean?",
      "options": ["I want to check in", "I want to check out", "I want to book", "I want to cancel"],
      "correct_index": 1,
      "explanation": "'Fazer check-out' means to check out of a hotel."
    },
    {
      "type": "matching_pairs",
      "prompt": "Match accommodation terms",
      "pairs": [
        ["single room", "quarto individual"],
        ["double room", "quarto duplo"],
        ["breakfast included", "pequeno-almoço incluído"],
        ["reception", "receção"]
      ]
    },
    {
      "type": "typing",
      "prompt": "Write 'Where is the beach?' in Portuguese",
      "correct_answers": ["Onde é a praia?", "Onde fica a praia?"],
      "hint": "Onde é/fica + a praia",
      "accent_strict": false
    },
    {
      "type": "sentence_builder",
      "prompt": "Build: 'I'm on vacation'",
      "words": ["Estou", "de", "férias", "trabalho", "em", "casa"],
      "correct_order": [0, 1, 2],
      "distractors": ["trabalho", "em", "casa"]
    },
    {
      "type": "multiple_choice",
      "prompt": "What is 'pequeno-almoço' in English?",
      "options": ["lunch", "dinner", "breakfast", "snack"],
      "correct_index": 2,
      "explanation": "'Pequeno-almoço' is European Portuguese for breakfast. Brazil uses 'café da manhã'."
    }
  ],
  "cheat_sheet": {
