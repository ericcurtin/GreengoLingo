  "cheat_sheet": {
    "title": "Directions in Portuguese",
    "sections": [
      {
        "heading": "Basic Directions",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Turn left", "Vire à esquerda"],
              ["Turn right", "Vire à direita"],
              ["Go straight", "Siga em frente"],
              ["Go back", "Volte para trás"],
              ["Cross the street", "Atravesse a rua"],
              ["At the corner", "Na esquina"],
              ["At the traffic lights", "No semáforo"]
            ]
          }
        ]
      },
      {
        "heading": "Location Words",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Next to", "Ao lado de"],
              ["In front of", "Em frente de"],
              ["Behind", "Atrás de"],
              ["Between", "Entre"],
              ["Near", "Perto de"],
              ["Far from", "Longe de"],
              ["Opposite", "Em frente de / Do outro lado"]
            ]
          }
        ]
      },
      {
        "heading": "Asking for Directions",
        "content": [
          {
            "type": "example",
            "source": "Como chego a...?",
            "target": "How do I get to...?",
            "note": "Standard way to ask for directions"
          },
          {
            "type": "example",
            "source": "Onde fica...?",
            "target": "Where is...?",
            "note": "For asking about location"
          },
          {
            "type": "example",
            "source": "É longe daqui?",
            "target": "Is it far from here?",
            "note": "To check distance"
          }
        ]
      },
      {
        "heading": "Tips",
        "content": [
          {
            "type": "tip",
            "text": "In Portugal, use 'apanhe' (take) for streets. 'Siga' (follow) also works well."
          },
          {
            "type": "warning",
            "text": "Remember: 'à esquerda' and 'à direita' use the preposition 'a' + definite article."
          }
        ]
      }
    ]
