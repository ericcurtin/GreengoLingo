  "questions": [
    {
      "type": "multiple_choice",
      "prompt": "How do you say 'In my opinion' formally in Portuguese?",
      "options": ["Na minha opinião", "Eu acho que", "Para mim", "Sei lá"],
      "correct_index": 0,
      "explanation": "'Na minha opinião' is the formal way to express an opinion."
    },
    {
      "type": "matching_pairs",
      "prompt": "Match debate expressions",
      "pairs": [
        ["I agree", "Concordo"],
        ["I disagree", "Discordo"],
        ["However", "No entanto"],
        ["On the other hand", "Por outro lado"]
      ]
    },
    {
      "type": "typing",
      "prompt": "Write 'I respectfully disagree' in Portuguese",
      "correct_answers": ["Discordo respeitosamente", "Com todo o respeito, discordo"],
      "hint": "Discordo + respeitosamente",
      "accent_strict": false
    },
    {
      "type": "multiple_choice",
      "prompt": "What does 'Embora concorde em parte, devo salientar que...' mean?",
      "options": ["I completely agree", "Although I partly agree, I must point out that...", "I strongly disagree", "Let me think about it"],
      "correct_index": 1,
      "explanation": "'Embora' introduces a concession. 'Salientar' means to emphasize/point out."
    },
    {
      "type": "matching_pairs",
      "prompt": "Match more discourse markers",
      "pairs": [
        ["Furthermore", "Além disso"],
        ["Nevertheless", "Não obstante"],
        ["In conclusion", "Em conclusão"],
        ["Therefore", "Por conseguinte"]
      ]
    },
    {
      "type": "typing",
      "prompt": "Write 'From my point of view' in Portuguese",
      "correct_answers": ["Do meu ponto de vista", "Sob o meu ponto de vista"],
      "hint": "Do meu ponto de...",
      "accent_strict": false
    },
    {
      "type": "sentence_builder",
      "prompt": "Build: 'I partially agree, but...'",
      "words": ["Concordo", "parcialmente", "mas", "totalmente", "nunca"],
      "correct_order": [0, 1, 2],
      "distractors": ["totalmente", "nunca"]
    },
    {
      "type": "multiple_choice",
      "prompt": "What is a formal way to counter an argument?",
      "options": ["Isso é estúpido", "Permita-me discordar", "Não me importa", "Tanto faz"],
      "correct_index": 1,
      "explanation": "'Permita-me discordar' (Allow me to disagree) is a polite, formal way to disagree."
    }
  ],
  "cheat_sheet": {
    "title": "Debate & Argumentation in European Portuguese",
    "sections": [
      {
        "heading": "Expressing Opinions",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["In my opinion", "Na minha opinião"],
              ["From my point of view", "Do meu ponto de vista"],
              ["I believe that", "Acredito que"],
              ["It seems to me that", "Parece-me que"],
              ["I'm convinced that", "Estou convicto/a de que"]
            ]
          }
        ]
      },
      {
        "heading": "Agreeing & Disagreeing",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["I completely agree", "Concordo plenamente"],
              ["I partly agree", "Concordo em parte"],
              ["I respectfully disagree", "Discordo respeitosamente"],
              ["Allow me to disagree", "Permita-me discordar"],
              ["I see your point, but...", "Entendo o seu ponto, mas..."]
            ]
          }
        ]
      },
      {
        "heading": "Discourse Markers",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Furthermore", "Além disso"],
              ["However", "No entanto / Contudo"],
              ["Nevertheless", "Não obstante"],
              ["On the other hand", "Por outro lado"],
              ["Therefore", "Por conseguinte / Portanto"],
              ["In conclusion", "Em conclusão / Concluindo"]
            ]
          }
        ]
      },
      {
        "heading": "Academic Style",
        "content": [
          {
            "type": "tip",
            "text": "In formal Portuguese debate, use the subjunctive mood for hypothetical situations: 'Embora isso seja verdade...' (Although that may be true...)"
          },
          {
            "type": "example",
            "source": "Reconheço a validade do seu argumento, todavia...",
            "target": "I acknowledge the validity of your argument, however...",
            "note": "Very formal academic style"
          }
        ]
      }
    ]
  }
