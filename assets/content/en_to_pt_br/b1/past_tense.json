      "accent_strict": false
    },
    {
      "type": "matching_pairs",
      "prompt": "Match the past tense forms",
      "pairs": [
        ["I was (permanent)", "Eu fui"],
        ["I was (temporary)", "Eu estive"],
        ["I had", "Eu tive"],
        ["I did/made", "Eu fiz"]
      ]
    },
    {
      "type": "multiple_choice",
      "prompt": "What is the difference between 'Eu fui' and 'Eu ia'?",
      "options": ["Fui is future, ia is past", "Fui is completed action, ia is ongoing/habitual", "They mean the same", "Fui is formal, ia is informal"],
      "correct_index": 1,
      "explanation": "'Fui' (pretérito perfeito) is a completed action. 'Ia' (pretérito imperfeito) describes ongoing or habitual past actions."
    },
    {
      "type": "sentence_builder",
      "prompt": "Build: 'Yesterday I worked a lot'",
      "words": ["Ontem", "eu", "trabalhei", "muito", "trabalho"],
      "correct_order": [0, 1, 2, 3],
      "distractors": ["trabalho"]
    },
    {
      "type": "typing",
      "prompt": "Write 'She spoke' in Portuguese",
      "correct_answers": ["Ela falou"],
      "hint": "Pretérito perfeito of 'falar' with feminine subject",
