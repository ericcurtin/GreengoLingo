{
  "id": "academic_01_br",
  "title": "Academic Language",
  "description": "Learn academic writing and discourse in Brazilian Portuguese",
  "level": "C1",
  "language_pair": {
    "source": "en_US",
    "target": "pt_BR"
  },
  "xp_reward": 30,
  "order": 3,
  "icon": "menu_book",
  "questions": [
    {
      "type": "multiple_choice",
      "prompt": "How do you say 'According to the author' in academic Portuguese?",
      "options": ["O autor disse", "Segundo o autor", "O autor falou", "De acordo ao autor"],
      "correct_index": 1,
      "explanation": "'Segundo o autor' or 'De acordo com o autor' are academic ways to cite sources."
    },
    {
      "type": "typing",
      "prompt": "Write 'The aim of this study is to...' in Portuguese",
      "correct_answers": ["O objetivo deste estudo é...", "Este estudo tem como objetivo..."],
      "hint": "Objetivo = aim/goal",
      "accent_strict": false
    },
    {
      "type": "matching_pairs",
      "prompt": "Match the academic connectors",
      "pairs": [
        ["Furthermore", "Além disso / Ademais"],
        ["However", "Contudo / No entanto / Porém"],
        ["Therefore", "Portanto / Logo / Assim"],
        ["In conclusion", "Em conclusão / Concluindo"]
      ]
    },
    {
      "type": "multiple_choice",
      "prompt": "Which verb form is typically used in Brazilian academic writing?",
      "options": ["First person singular (eu)", "First person plural (nós)", "Third person/impersonal", "Second person (você)"],
      "correct_index": 2,
      "explanation": "Academic Portuguese uses third person or impersonal constructions, though 'nós' is sometimes accepted in Brazil."
    },
    {
      "type": "sentence_builder",
      "prompt": "Build: 'The data suggests that...'",
      "words": ["Os", "dados", "sugerem", "que", "sugere"],
      "correct_order": [0, 1, 2, 3],
      "distractors": ["sugere"]
    },
    {
      "type": "typing",
      "prompt": "Write 'As can be observed' in Portuguese (impersonal)",
      "correct_answers": ["Como se pode observar", "Conforme se observa", "Como é possível observar"],
      "hint": "Use impersonal 'se'",
      "accent_strict": false
    },
    {
      "type": "multiple_choice",
      "prompt": "What is ABNT in Brazilian academic context?",
      "options": ["A university", "Brazilian citation/formatting standards", "A research journal", "An academic degree"],
      "correct_index": 1,
      "explanation": "ABNT (Associação Brasileira de Normas Técnicas) sets the citation and formatting standards for Brazilian academic work."
    },
    {
      "type": "matching_pairs",
      "prompt": "Match citation language",
      "pairs": [
        ["According to...", "Segundo... / De acordo com..."],
        ["As argued by...", "Conforme argumenta..."],
        ["In the words of...", "Nas palavras de..."],
        ["Emphasis added", "Grifo nosso"]
      ]
    }
  ],
  "cheat_sheet": {
    "title": "Academic Language",
    "sections": [
      {
        "heading": "Research Paper Structure",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Abstract", "Resumo"],
              ["Introduction", "Introdução"],
              ["Literature Review", "Revisão de Literatura / Referencial Teórico"],
              ["Methodology", "Metodologia"],
              ["Results", "Resultados"],
              ["Discussion", "Discussão"],
              ["Conclusion", "Conclusão / Considerações Finais"],
              ["References", "Referências Bibliográficas"]
            ]
          }
        ]
      },
      {
        "heading": "Academic Connectors",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Furthermore/Moreover", "Além disso / Ademais"],
              ["However/Nevertheless", "Contudo / No entanto / Todavia"],
              ["Therefore/Thus", "Portanto / Logo / Dessa forma"],
              ["On the other hand", "Por outro lado"],
              ["In contrast", "Em contrapartida"],
              ["In other words", "Em outras palavras / Ou seja"]
            ]
          }
        ]
      },
      {
        "heading": "ABNT Citation Style",
        "content": [
          {
            "type": "text",
            "text": "Brazilian academic work follows ABNT standards:"
          },
          {
            "type": "example",
            "source": "Segundo Silva (2020, p. 45)...",
            "target": "According to Silva (2020, p. 45)...",
            "note": "In-text citation format"
          },
          {
            "type": "example",
            "source": "(SILVA, 2020)",
            "target": "(SILVA, 2020)",
            "note": "Author-date format"
          }
        ]
      },
      {
        "heading": "Tips",
        "content": [
          {
            "type": "tip",
            "text": "Brazilian academic writing sometimes allows first person plural 'nós' for the researcher's voice."
          },
          {
            "type": "warning",
            "text": "Always follow ABNT standards for Brazilian academic work. They differ from APA or MLA."
          }
        ]
      }
    ]
  }
}
