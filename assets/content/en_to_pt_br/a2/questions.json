{
  "id": "questions_01_br",
  "title": "Asking Questions",
  "description": "Learn how to ask common questions in Brazilian Portuguese",
  "level": "A2",
  "language_pair": {
    "source": "en_US",
    "target": "pt_BR"
  },
  "xp_reward": 15,
  "order": 4,
  "icon": "help",
  "questions": [
    {
      "type": "multiple_choice",
      "prompt": "How do you say 'Where?' in Portuguese?",
      "options": ["Quando?", "Onde?", "Quem?", "O quê?"],
      "correct_index": 1,
      "explanation": "'Onde' means where. 'Quando' means when."
    },
    {
      "type": "matching_pairs",
      "prompt": "Match the question words",
      "pairs": [
        ["What?", "O quê?"],
        ["Who?", "Quem?"],
        ["When?", "Quando?"],
        ["Why?", "Por quê?"]
      ]
    },
    {
      "type": "typing",
      "prompt": "Write 'How?' in Portuguese",
      "correct_answers": ["Como?", "como"],
      "hint": "Same as asking 'how are you'",
      "accent_strict": false
    },
    {
      "type": "multiple_choice",
      "prompt": "What does 'Onde fica o banco?' mean?",
      "options": ["When is the bank open?", "Where is the bank?", "What is the bank?", "How far is the bank?"],
      "correct_index": 1,
      "explanation": "'Onde fica' means 'where is' (location of a place)."
    },
    {
      "type": "sentence_builder",
      "prompt": "Build: 'Why are you here?'",
      "words": ["Por", "que", "você", "está", "aqui", "lá"],
      "correct_order": [0, 1, 2, 3, 4],
      "distractors": ["lá"]
    },
    {
      "type": "typing",
      "prompt": "Write 'What is this?' in Portuguese",
      "correct_answers": ["O que é isso?", "O que é isto?", "Que é isso?"],
      "hint": "O que é + demonstrative",
      "accent_strict": false
    },
    {
      "type": "multiple_choice",
      "prompt": "How do you ask 'How many?' (quantity)?",
      "options": ["Quanto?", "Quantos?", "Qual?", "Como?"],
      "correct_index": 1,
      "explanation": "'Quantos/Quantas' asks about quantity (how many). 'Quanto' asks about amount/price."
    },
    {
      "type": "matching_pairs",
      "prompt": "Match the questions",
      "pairs": [
        ["Where is the bathroom?", "Onde é o banheiro?"],
        ["What time is it?", "Que horas são?"],
        ["How do I get to...?", "Como eu chego em...?"],
        ["Can you help me?", "Você pode me ajudar?"]
      ]
    }
  ],
  "cheat_sheet": {
    "title": "Question Words",
    "sections": [
      {
        "heading": "Basic Question Words",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["What?", "O quê? / Que?"],
              ["Who?", "Quem?"],
              ["Where?", "Onde?"],
              ["When?", "Quando?"],
              ["Why?", "Por quê?"],
              ["How?", "Como?"],
              ["How much?", "Quanto?"],
              ["How many?", "Quantos? / Quantas?"],
              ["Which?", "Qual? / Quais?"]
            ]
          }
        ]
      },
      {
        "heading": "Common Questions",
        "content": [
          {
            "type": "example",
            "source": "Onde fica...?",
            "target": "Where is...? (location)",
            "note": "Used for places/buildings"
          },
          {
            "type": "example",
            "source": "Cadê...?",
            "target": "Where is...? (informal)",
            "note": "Very common in Brazilian Portuguese"
          },
          {
            "type": "example",
            "source": "Por que...?",
            "target": "Why...?",
            "note": "Two words when asking a question"
          }
        ]
      },
      {
        "heading": "Useful Questions",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Where is the bathroom?", "Onde é o banheiro?"],
              ["Do you speak English?", "Você fala inglês?"],
              ["Can you repeat?", "Pode repetir?"],
              ["What does this mean?", "O que significa isso?"],
              ["Is there...?", "Tem...?"]
            ]
          }
        ]
      },
      {
        "heading": "Tips",
        "content": [
          {
            "type": "tip",
            "text": "'Cadê?' is a uniquely Brazilian way to ask 'Where is...?' (informal)."
          },
          {
            "type": "warning",
            "text": "In Brazilian Portuguese: 'Por que' (why - question), 'Porque' (because - answer), 'Por quê' (why - end of sentence)."
          }
        ]
      }
    ]
  }
}
