  "cheat_sheet": {
    "title": "Future Tense in English",
    "sections": [
      {
        "heading": "Going To (Planos)",
        "content": [
          {
            "type": "text",
            "text": "Usado para planos e intenções:"
          },
          {
            "type": "vocabulary",
            "items": [
              ["Vou falar", "I'm going to speak"],
              ["Vais falar", "You're going to speak"],
              ["Ele/Ela vai falar", "He's/She's going to speak"],
              ["Vamos falar", "We're going to speak"],
              ["Vão falar", "They're going to speak"]
            ]
          }
        ]
      },
      {
        "heading": "Will (Futuro Simples)",
        "content": [
          {
            "type": "text",
            "text": "Usado para promessas, ofertas e decisões espontâneas:"
          },
          {
            "type": "vocabulary",
            "items": [
              ["Falarei", "I will speak / I'll speak"],
              ["Falarás", "You will speak / You'll speak"],
              ["Falará", "He/She will speak"],
              ["Falaremos", "We will speak / We'll speak"],
              ["Falarão", "They will speak / They'll speak"]
            ]
          }
        ]
      },
      {
        "heading": "Expressões de Tempo",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Amanhã", "Tomorrow"],
              ["Depois de amanhã", "The day after tomorrow"],
              ["Na próxima semana", "Next week"],
              ["No próximo mês", "Next month"],
              ["No próximo ano", "Next year"],
              ["Em breve", "Soon"],
              ["Mais tarde", "Later"]
            ]
          }
        ]
      },
      {
        "heading": "Dicas",
        "content": [
          {
            "type": "tip",
            "text": "Use 'going to' para planos: 'I'm going to visit my family'. Use 'will' para promessas: 'I will help you'."
          },
          {
            "type": "warning",
            "text": "'Will' contrai-se para 'll: I'll, you'll, he'll, etc."
          }
        ]
      }
    ]
  }
