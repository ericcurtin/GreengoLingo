      "correct_index": 1,
      "explanation": "'Check out' significa sair do hotel / fazer check-out."
    },
    {
      "type": "matching_pairs",
      "prompt": "Combine os termos de alojamento",
      "pairs": [
        ["quarto individual", "single room"],
        ["quarto duplo", "double room"],
        ["pequeno-almoço incluído", "breakfast included"],
        ["receção", "reception"]
      ]
    },
    {
      "type": "typing",
      "prompt": "Escreva 'Onde é a praia?' em Inglês",
      "correct_answers": ["Where is the beach?", "Where's the beach?"],
      "hint": "Where is + the beach",
      "accent_strict": false
    },
    {
      "type": "sentence_builder",
      "prompt": "Construa: 'Estou de férias'",
      "words": ["I'm", "on", "vacation", "work", "at", "home"],
      "correct_order": [0, 1, 2],
      "distractors": ["work", "at", "home"]
    },
    {
      "type": "multiple_choice",
      "prompt": "Como se diz 'pequeno-almoço' em Inglês?",
      "options": ["lunch", "dinner", "breakfast", "snack"],
      "correct_index": 2,
      "explanation": "'Breakfast' significa pequeno-almoço."
    }
  ],
