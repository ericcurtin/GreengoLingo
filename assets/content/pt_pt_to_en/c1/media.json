      "correct_index": 1,
      "explanation": "'Mass media' refere-se aos meios de comunicação social (TV, rádio, imprensa)."
    },
    {
      "type": "matching_pairs",
      "prompt": "Combine mais vocabulário de media",
      "pairs": [
        ["artigo", "article"],
        ["editorial", "editorial"],
        ["entrevista", "interview"],
        ["reportagem", "report"]
      ]
    },
    {
      "type": "typing",
      "prompt": "Escreva 'notícias falsas' em Inglês",
      "correct_answers": ["fake news", "misinformation", "disinformation"],
      "hint": "fake + news",
      "accent_strict": false
    },
    {
      "type": "sentence_builder",
      "prompt": "Construa: 'Segundo a reportagem'",
      "words": ["According", "to", "the", "report", "newspaper", "news"],
      "correct_order": [0, 1, 2, 3],
      "distractors": ["newspaper", "news"]
    },
    {
      "type": "multiple_choice",
      "prompt": "O que é 'reliable source'?",
      "options": ["fonte falsa", "fonte fidedigna", "fonte anónima", "fonte primária"],
