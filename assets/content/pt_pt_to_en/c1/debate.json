    {
      "type": "multiple_choice",
      "prompt": "Como se diz 'Na minha opinião' formalmente em Inglês?",
      "options": ["In my opinion", "I think", "For me", "I don't know"],
      "correct_index": 0,
      "explanation": "'In my opinion' é a forma formal de expressar uma opinião."
    },
    {
      "type": "matching_pairs",
      "prompt": "Combine as expressões de debate",
      "pairs": [
        ["Concordo", "I agree"],
        ["Discordo", "I disagree"],
        ["No entanto", "However"],
        ["Por outro lado", "On the other hand"]
      ]
    },
    {
      "type": "typing",
      "prompt": "Escreva 'Discordo respeitosamente' em Inglês",
      "correct_answers": ["I respectfully disagree", "With all due respect, I disagree"],
      "hint": "I respectfully + disagree",
      "accent_strict": false
    },
    {
      "type": "multiple_choice",
      "prompt": "O que significa 'Although I partly agree, I must point out that...'?",
