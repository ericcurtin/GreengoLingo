    "sections": [
      {
        "heading": "Emoções Básicas",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["feliz", "happy"],
              ["triste", "sad"],
              ["com raiva / bravo", "angry"],
              ["com medo / assustado", "scared / afraid"],
              ["surpreso", "surprised"],
              ["cansado", "tired"]
            ]
          }
        ]
      },
      {
        "heading": "Emoções Complexas",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["decepcionado", "disappointed"],
              ["frustrado", "frustrated"],
              ["aliviado", "relieved"],
              ["com vergonha", "embarrassed"],
              ["sobrecarregado", "overwhelmed"],
              ["animado / empolgado", "excited"]
            ]
          }
        ]
      },
      {
        "heading": "Expressões Brasileiras",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Estou de saco cheio", "I'm fed up"],
              ["Estou orgulhoso de", "I'm proud of"],
              ["Estou com saudade de...", "I miss..."],
              ["Estou de bom humor", "I'm in a good mood"],
              ["Estou estressado", "I'm stressed"]
            ]
          }
        ]
      },
      {
        "heading": "Traduzir Saudade",
        "content": [
          {
            "type": "tip",
            "text": "'Saudade' é difícil de traduzir. Pode usar: 'I miss you', 'I long for', 'I yearn for', ou explicar: 'a deep longing'."
          },
          {
            "type": "example",
            "source": "I really miss you",
            "target": "Estou com muita saudade de você",
            "note": "'Really miss' aproxima-se da intensidade de 'saudade'"
          }
        ]
      }
