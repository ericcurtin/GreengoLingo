  "questions": [
    {
      "type": "multiple_choice",
      "prompt": "Como se relata 'I am tired' em discurso indireto?",
      "options": ["He said he is tired", "He said he was tired", "He said he be tired", "He said he been tired"],
      "correct_index": 1,
      "explanation": "No discurso indireto, o presente 'am' muda para passado 'was'."
