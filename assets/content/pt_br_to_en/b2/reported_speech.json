  "cheat_sheet": {
    "title": "Reported Speech in English",
    "sections": [
      {
        "heading": "Mudanças de Tempo Verbal",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Present simple → Past simple", "is → was"],
              ["Present continuous → Past continuous", "is going → was going"],
              ["Past simple → Past perfect", "went → had gone"],
              ["Present perfect → Past perfect", "have done → had done"],
              ["Will → Would", "will go → would go"],
              ["Can → Could", "can do → could do"]
            ]
          }
        ]
      },
      {
        "heading": "Verbos de Relato",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Dizer", "Say / Tell"],
              ["Perguntar", "Ask"],
              ["Mandar", "Tell / Order"],
              ["Admitir", "Admit"],
              ["Explicar", "Explain"],
              ["Sugerir", "Suggest"]
            ]
          }
        ]
      },
      {
        "heading": "Estruturas para Perguntas",
        "content": [
          {
            "type": "example",
            "source": "Perguntou: 'Onde você mora?'",
            "target": "She asked where I lived",
            "note": "Ordem de palavras muda para afirmativa"
          },
          {
            "type": "example",
            "source": "Perguntou: 'Você vem pra festa?'",
            "target": "He asked if/whether I was coming to the party",
            "note": "Perguntas sim/não usam 'if' ou 'whether'"
          }
        ]
      },
      {
        "heading": "Dicas",
        "content": [
          {
            "type": "tip",
            "text": "'Say' não precisa de objeto: 'He said (that)...'. 'Tell' precisa: 'He told me (that)...'"
          },
          {
            "type": "warning",
            "text": "No discurso indireto, a ordem das palavras nas perguntas muda para ordem afirmativa."
          }
        ]
      }
    ]
  }
}
