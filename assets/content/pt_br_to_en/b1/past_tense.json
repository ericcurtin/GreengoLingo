  "cheat_sheet": {
    "title": "Past Tense in English",
    "sections": [
      {
        "heading": "Simple Past",
        "content": [
          {
            "type": "text",
            "text": "Usado para ações completas no passado:"
          },
          {
            "type": "vocabulary",
            "items": [
              ["Eu falei", "I spoke / I talked"],
              ["Você falou", "You spoke / You talked"],
              ["Ele/Ela falou", "He/She spoke / talked"],
              ["A gente falou / Nós falamos", "We spoke / We talked"],
              ["Eles falaram", "They spoke / They talked"]
            ]
          }
        ]
      },
      {
        "heading": "Past Continuous",
        "content": [
          {
            "type": "text",
            "text": "Usado para ações em progresso no passado:"
          },
          {
            "type": "vocabulary",
            "items": [
              ["Eu estava falando", "I was speaking/talking"],
              ["Você estava falando", "You were speaking/talking"],
              ["Ele/Ela estava falando", "He/She was speaking/talking"],
              ["A gente estava falando", "We were speaking/talking"],
              ["Eles estavam falando", "They were speaking/talking"]
            ]
          }
        ]
      },
      {
        "heading": "Verbos Irregulares Comuns",
        "content": [
          {
            "type": "vocabulary",
            "items": [
              ["Ser/Estar - Fui/Estive", "Be - Was/Were"],
              ["Ter - Tive", "Have - Had"],
              ["Ir - Fui", "Go - Went"],
              ["Fazer - Fiz", "Do - Did / Make - Made"],
              ["Ver - Vi", "See - Saw"],
              ["Dizer - Disse", "Say - Said"]
            ]
          }
        ]
      },
      {
        "heading": "Dicas",
        "content": [
          {
            "type": "tip",
            "text": "Em inglês, verbos regulares no passado terminam em '-ed': worked, talked, played."
          },
          {
            "type": "warning",
            "text": "Em inglês, não há diferença entre pretérito perfeito e imperfeito como em português. Use 'used to' para hábitos passados."
          }
        ]
      }
    ]
  }
}
